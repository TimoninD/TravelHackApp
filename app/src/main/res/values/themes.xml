<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_900</item>
        <item name="colorOnPrimary">@color/purple_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crane_red</item>
        <item name="colorSecondaryVariant">@color/crane_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/BaseToolbar</item>
    </style>

    <style name="BaseToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextSemiBold.20.White</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>
</resources>