<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MainActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/crane_red</item>
        <item name="colorSecondaryVariant">@color/crane_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/placeholder</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/BaseToolbar</item>
        <item name="buttonStyle">@style/BaseButton</item>
        <item name="editTextStyle">@style/BaseEditText</item>
    </style>

    <style name="BaseToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/TextSemiBold.20.Black</item>
        <item name="android:background">@color/white</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="BaseButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textAllCaps">true</item>
        <item name="cornerRadius">9dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAppearance">@style/TextSemiBold.14.Black</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="BaseEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColorHint">@color/black_50</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextMedium.16.Black</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>